<div id="rock-paper-scissors">
  <div id="content" class="text-center offset-md-3 col-md-6">
    <h1 class="main-title"><%= t('main-title') %></h1>

    <div class="description-text mt-4">
      <%= t('description-text') %>
    </div>

    <div class="text-uppercase mt-4"><%= t('select-bet-text') %></div>

    <div class="choices mt-4">
      <% @context[:bets].each do |bet| %>
        <%= link_to play_path(bet: bet), remote: true, method: :post do %>
          <%= t(bet) %>
          <%= image_tag "#{bet}.svg", class: 'bet-image ' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

